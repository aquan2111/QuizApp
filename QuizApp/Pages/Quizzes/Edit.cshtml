@page
@model QuizApp.Pages.Quizzes.EditModel
@{
    ViewData["Title"] = "Edit Quiz";
}

<h2>Edit Quiz</h2>

<form method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="NewQuiz.Title" value="@Model.NewQuiz.Title" required />
    </div>

    <h3>Select Questions</h3>
    <div class="form-group">
        @foreach (var question in Model.AllQuestions)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input"
                       id="question-@question.Id"
                       name="SelectedQuestionIds"
                       value="@question.Id"
                @if (Model.SelectedQuestionIds.Contains(question.Id))
                {
                    <text>checked</text>
                }>
                <label class="form-check-label" for="question-@question.Id">@question.Text</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success mt-3">Save Changes</button>
</form>
